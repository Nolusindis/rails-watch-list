<div class="position-relative">
  <div class="card-category">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <div>
      <%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-cancel" %>
       <%= link_to "Delete List", list_path(@list), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
       <%= button_to "Reverse List", new_list_bookmark_path(@list) %>
    </div>
  </div>
  <div class="row my-2">
    <% unless @list.bookmarks.nil? %>
      <% @list.bookmarks.each do |book| %>
        <h1><%= book.movie.title%></h1>
        <p><%= book.comment %></p>
        <p><%= image_tag book.movie.poster_url, class: "poster" %></p>
      <% end %>
    <% end %>
  </div>
  <hr class="my-5">
</div>
